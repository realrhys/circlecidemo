apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: circlecidemo-service
  namespace: venue-dev
spec:
  replicas: 1
  template:
    metadata:
      labels:
        application: circlecidemo-service
        version: v1
    spec:
      containers:
      - name: circlecidemo-service
        image: volentixlabs/circlecidemo:0.0.BUILD_VERSION
        ports:
        - containerPort: 3000
---
apiVersion: v1
kind: Service
metadata:
  name: circlecidemo-service
  namespace: venue-dev
  labels:
    application: circlecidemo-service
    version: v1
spec:
  type: ClusterIP
  ports:
    - port: 80
      protocol: TCP
      targetPort: 3000
      name: external
  selector:
    application: circlecidemo-service
    version: v1
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: "circlecidemo-v1"
  namespace: venue-dev
  labels:
    application: circlecidemo
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"
spec:
  rules:
  - host: "circlecidemo.dev.vlabs.ninja"
    http:
      paths:
      - backend:
          serviceName: "circlecidemo-service"
          servicePort: 80

